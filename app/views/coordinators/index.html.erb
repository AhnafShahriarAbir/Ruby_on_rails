<h1>All Coordinators</h1>
<%= render 'course_nav' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @coordinators.each do |coordinator| %>
  <div class="row">
    <div class="col-md-8" >
      
        <%= gravatar_for_coor coordinator %><br>
        <p>Coordinator name: <%= coordinator.name %></p>
        
        <p><%= link_to 'Destroy', coordinator, method: :delete, data: { confirm: 'Are you sure?' } %></p>
     <br><br>
    </div>
  </div>
<% end %>
      <tr>
        <%= gravatar_for_coor coordinator %>
        <td><%= coordinator.name %></td>
        <td><%= coordinator.email %></td>
        <td><%= link_to coordinator.course.name, coordinator.course %></td>

        <td><%= link_to 'Destroy', coordinator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

