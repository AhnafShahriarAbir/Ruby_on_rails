<p id="notice"><%= notice %></p>

<h1>All Courses</h1>
<%= render 'course_nav' %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
      <th>Prerequisite</th>
      <th colspan="3"></th>
      <th>Category</th>
      <th colspan="2"></th>
      <th>Location</th>
      <th colspan="4"></th>
      <th>Created</th>
      
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td colspan="2"></td>
        <td> <%= course.categories.count %> </td>
        <td><%= course.prerequisite %></td>
        <td colspan="2"></td>
        <td><%= course.categories %></td>
        <td colspan="2"></td>
        <td><%= course.location %></td>
        <td colspan="3"></td>
        <td><%= course.created %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Course', new_course_path %>
