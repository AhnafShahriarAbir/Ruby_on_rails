
<h1>Course</h1>

<div class="col-md-8" >

    <div class="details" >
      <p>
        <strong>Name:</strong>
        <%= @course.name %>
      </p>

      <p>
        <strong>Prerequisite:</strong>
        <%= @course.prerequisite %>
      </p>

      <p>
        <strong>Category:</strong>

          <% if !@course.categories.empty? %>
            <%= @course.categories.collect {|c|
              link_to( c.name, c)}.join(", ").html_safe %>
          <% else %>
            Not added to any category yet.
          <% end %>

      </p>

      <p>
        <strong>Location:</strong>
        <%= @course.location %>
      </p>

      <p>
        <strong>Created:</strong>
        <%= @course.created_at %>
      </p>

    </div>

</div>


<div class="col-md-4" >
  <% if @course.avatar.attached? %>
        <image height="200" width="200" src="<%= (url_for(@course.avatar))%>">

  <%end%>
</div>





<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Add to Category', categories_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
