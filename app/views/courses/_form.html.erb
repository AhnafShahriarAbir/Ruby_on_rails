


<%= form_with(model: course, local: true) do |form| %>



  <%=form.hidden_field :user_id, value: current_user.id %>

    <%= form.label :name %>
    <%= form.text_field :name, id: :course_name %>

    <%= form.label :prerequisite %>
    <%= form.text_area :prerequisite, id: :course_prerequisite %>

    <%= form.label :description %>
    <%= form.text_area :description, id: :course_description %>


    <%= form.label :created %>
    <%= form.datetime_select :created, id: :course_created %>



    <%= form.submit %>

<% end %>
