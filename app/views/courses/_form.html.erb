


<%= form_with(model: course, local: true) do |form| %>
<%= render 'shared/error_messages0', object: @course %>


  <%=form.hidden_field :user_id, value: current_user.id %>

    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>

    <%= form.label :prerequisite %>
    <%= form.text_area :prerequisite, class: 'form-control' %>

    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>

    <%= form.label :categories %>
            <% for category in Category.all %>
            <%= category.name %>
            <%= check_box_tag "course[category_ids][]", category.id,
                @course.categories.include?(category) %>
            <% end %>

          <%#= course.categories.map(&:name).join(', ') %>
       
          <p>Description:  <%= course.description %></p>

          <p>Location: 
         <%= form.label :locations %>
              <% for location in Location.all %>
              <%= location.name %>
              <%= check_box_tag "course[location_ids][]", location.id,
                  @course.locations.include?(location) %>
              <% end %>

      <%= form.label "course photo" %>
      <%= form.file_field :avatar, class: 'form-control'  %>

   

    <%= form.submit %>

<% end %>
