<%= form_with(model: users, local: true) do |form| %>
  <% if users.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(users.errors.count, "error") %> prohibited this users from being saved:</h2>

      <ul>
      <% users.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :users_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :users_email %>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.select :course_id, Course.all.order(:name).collect{
      |s| [(s.name), s.id]}%>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
