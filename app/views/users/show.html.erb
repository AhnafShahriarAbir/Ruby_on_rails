
<% provide(:title, @user.name) %>

<div class="row">
    <div class="d-flex justify-content-between">
            <h1><%= "Coordinator: "+ @user.name %></h1>
                    <%= gravatar_for @user %>
              
            <% if current_user.admin? && !current_user?(user) %>
            | <%= link_to "delete", user, method: :delete,
                                        data: { confirm: "You sure?" } %>
        <% end %>
    </div>
</div>
