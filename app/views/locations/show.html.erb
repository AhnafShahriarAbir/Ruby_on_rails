
<h1>location</h1>

<div class="col-md-8" >

      <div class="details" >
      <p>
        <strong>Name:</strong>
        <%= @location.name %>
      </p>

      <p>
        <strong>Prerequisite:</strong>
        <%= @location.prerequisite %>
      </p>

      <p>
        <strong>Category:</strong>

          <% if !@location.categories.empty? %>
            <%= @location.categories.collect {|c|
              link_to( c.name, c)}.join(", ").html_safe %>
          <% else %>
            Not added to any category yet.
          <% end %>

      </p>

      <p>
        <strong>Location:</strong>
        <%= @location.location %>
      </p>

      <p>
        <strong>Created:</strong>
        <%= @location.created_at %>
      </p>

    </div>

</div>


<div class="col-md-4" >
  <% if @location.avatar.attached? %>
        <image src="<%= (url_for(@location.avatar))%>">
  <%end%>
</div>





<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Add to Category', categories_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
